// ## set `.set`
// Holds a collection of .step

.set {
  margin: 1.4em auto;
  padding: 1.1em;
  max-width: 11em;
  border: 1px solid #aaa;
  border-radius: 6px;
  text-align: center;
}

//
// Included Modules
//

.set {

  .step-btn {
    margin: 0.8em 0;
  }
}